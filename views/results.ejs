<%- include("partials/header.ejs", authenticated, user) %>
<div class="pattern pt-4">
  <div class="d-flex justify-content-center">
   <h5 class="text-center" id='pill_recipe'> Recipes for, </h5>
  </div>
     
    <div class="row row-cols-3 mx-auto">

  <% results.forEach( function(i) { %>

    <div class="col d-flex justify-content-center ">
        <div class="card custom-card" >
        <div class="card-body">

             <div class="d-flex ">   
              <img src="<%=i.photo%>" width=150px height=150px>


              <div class="d-flex flex-column justify-content-start ml-3"> 
                            <h5 class="card-title mt-4"> <%=i.name%> </h5>
                            <p> <i class="fas fa-hourglass-half mr-2"></i>Preparation:  <em> <%=i.time%> minutes</em> </p>
                     
              </div>
             </div>

        <% if(user.userId == i.userId) { %>

          <a class="btn btn-primary" href="/updateRecipe?recipeId=<%=i.recipeId%>"> Edit </a><br>
          <a class="deleteRecipe btn btn-primary" href="#" id="<%=i.recipeId%>"> Remove </a><br><br>


        <% } %>
        <button  data-toggle="modal" data-target="#modal_<%=i.recipeId%>" id="<%=i.recipeId%>"  class="recipe btn-block btn custom-home-buttons mt-3"> <i class="fas fa-utensils"></i> Open Recipe</button>
      </div>
    </div>
</div>
    

    

  <% }) %>


</div>

  <!-- Modal -->
  <div class="modal fade" id="recipeModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Recipe Info</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <div id="recipeInfo"></div>
        </div>

        <div class="modal-footer">
        
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>

      </div>
    </div>
  </div>


  <script src="js/searchResults.js"></script>

<%- include("partials/footer.ejs") %>
